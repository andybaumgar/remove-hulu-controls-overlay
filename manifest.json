{
  "manifest_version": 3,
  "name": "Hulu Remove Overlay",
  "description": "This extension removes the dark overlay displayed while pausing a Hulu video.",
  "version": "1",
  "action": {
    "default_icon": "icon.png"
  },
  "host_permissions": [
    "*://www.hulu.com/"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.hulu.com/*"
      ],
      "css": ["styles.css"]
    }
  ]
}
